{
  "version": 2,
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/:path*", "destination": "/:path*" }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 512,
      "maxDuration": 10,
      "runtime": "nodejs18.x"
    },
    "api/**/*.ts": {
      "memory": 512,
      "maxDuration": 10,
      "runtime": "nodejs18.x"
    }
  }
}
